<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-order_stages-table.1" author="AABelimov">
        <preConditions>
            <not>
                <tableExists tableName="order_stages"/>
            </not>
        </preConditions>

        <createTable tableName="order_stages">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(2048)">
                <constraints nullable="false"/>
            </column>
            <column name="order_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="order_stages" baseColumnNames="order_id"
                                 constraintName="fk_order_stages_order_id"
                                 referencedTableName="orders"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>