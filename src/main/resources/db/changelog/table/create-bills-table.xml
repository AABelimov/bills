<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-bills-table.1" author="AABelimov">
        <preConditions>
            <not>
                <tableExists tableName="bills"/>
            </not>
        </preConditions>

        <createTable tableName="bills">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(2048)">
                <constraints nullable="false"/>
            </column>
            <column name="photo_path" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="order_stage_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="bills" baseColumnNames="order_stage_id"
                                 constraintName="fk_bills_order_stage_id"
                                 referencedTableName="order_stages"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>